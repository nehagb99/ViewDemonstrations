<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:tag="BottomRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@android:color/darker_gray"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:tag="BottomRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@android:color/darker_gray"
        android:text="Hello World!"
        android:layout_marginLeft="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/Middle"
        android:tag="BottomRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@android:color/white"
        android:text="Hello World!"
        android:layout_marginLeft="170dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:tag="BottomRight"
        android:layout_width="210dp"
        android:layout_height="120dp"
        android:background="#58E2F5"
        android:text="Hello World!"
        android:layout_marginLeft="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:tag="BottomRight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="@+id/Middle"
        app:layout_constraintRight_toRightOf="@id/Middle"
        app:layout_constraintTop_toTopOf="@id/Middle"
        app:layout_constraintBottom_toBottomOf="@id/Middle"/>

</androidx.constraintlayout.widget.ConstraintLayout>